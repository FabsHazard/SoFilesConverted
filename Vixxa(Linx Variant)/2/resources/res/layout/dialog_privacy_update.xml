<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/shape_dialog_confirm" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:id="@+id/upgradeTop" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_above="@+id/ll_download" android:layout_alignParentTop="true">
        <TextView android:textSize="18sp" android:textStyle="bold" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginTop="16dp" android:layout_marginRight="15dp" android:layout_marginBottom="10dp" android:text="@string/version_policy_update_title" android:textAlignment="center" app:emojiCompatEnabled="false"/>
        <ScrollView android:id="@+id/sl_content" android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
            <LinearLayout android:background="@color/transparent" android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView android:id="@+id/tv_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginRight="25dp" android:minHeight="120dp" android:lineSpacingExtra="2dp" app:emojiCompatEnabled="false"/>
            </LinearLayout>
        </ScrollView>
        <TextView android:id="@+id/tv_detail" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="25dp" android:layout_marginTop="16dp" android:layout_marginRight="25dp" android:layout_marginBottom="10dp" android:textAlignment="viewStart" app:emojiCompatEnabled="false"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/ll_download" android:paddingLeft="30dp" android:paddingRight="30dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="16dp" android:layout_alignParentBottom="true">
        <com.microtech.aidexx.views.button.StateButton android:id="@+id/bt_ok" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/com_agree" android:layout_weight="1" style="@style/StateButtonRaised"/>
        <TextView android:gravity="center" android:id="@+id/bt_cancel" android:padding="12dp" android:paddingBottom="0dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:text="@string/com_disagree" android:layout_weight="1" app:emojiCompatEnabled="false" style="@style/btnDialog"/>
    </LinearLayout>
</RelativeLayout>
