    </LinearLayout>
    <TextView android:textSize="14sp" android:textColor="#666" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="40dp" android:text="@string/user_sign_tip1" app:emojiCompatEnabled="false"/>
</LinearLayout>
